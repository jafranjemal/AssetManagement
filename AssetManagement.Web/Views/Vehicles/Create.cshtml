@model AssetManagement.Domain.Entities.Vehicle

@{
    ViewData["Title"] = "Create";
}



<h1>Create Vehicle</h1>
<h4>Vehicle</h4>
<hr />
<div class="max-w-7xl mx-auto bg-white p-6 shadow-md">
    <h1 class="text-2xl font-bold text-center mb-6">Vehicle Asset Master (Fleet / Garage)</h1>
    
    <form asp-action="Create">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <h2 class="font-bold mb-2">Vehicle General Details</h2>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="SystemId">Technical #</label>
                    <input asp-for="SystemId" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="SystemId" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="PlateNumber">Plate #</label>
                    <input asp-for="PlateNumber" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="PlateNumber" class="text-danger"></span>
                </div>
            </div>
            <div>
                <h2 class="font-bold mb-2">Vehicle Statuses</h2>

                <div class="mb-4">
                    <label class="block mb-1" asp-for="VehicleStatus">Operational Status</label>
                    <select asp-for="VehicleStatus" class="w-full border border-gray-300 p-2">
                        <option value="Active">Active</option>
                        <option value="Alert">Alert</option>
                    </select>
                    <span asp-validation-for="OperationalStatus" class="text-danger"></span>
                </div> <div class="mb-4">
                    <label class="block mb-1" asp-for="OperationalStatus">Operational Status</label>
                    <select asp-for="OperationalStatus" class="w-full border border-gray-300 p-2">
                        <option value="On Project">On Project</option>
                        <option value="Internal">Internal</option>
                        <option value="Standby">Standby</option>
                        <option value="Replacement">Replacement</option>
                        <option value="Pool">Pool</option>
                    </select>
                    <span asp-validation-for="OperationalStatus" class="text-danger"></span>
                </div>
