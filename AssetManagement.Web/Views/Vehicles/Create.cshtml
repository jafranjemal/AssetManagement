            <a href="#" class="text-blue-500 underline">Maintenance Details</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <h2 class="font-bold mb-2">Location & Contact Details</h2>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="Location.ContactInCharge">Contact/Charge Name</label>
                    <input asp-for="Location.ContactInCharge" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="Location.ContactInCharge" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="Location.LocationName">Location Name</label>
                    <input asp-for="Location.LocationName" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="Location.LocationName" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="Location.ProjectName">Project Name</label>
                    <input asp-for="Location.ProjectName" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="Location.ProjectName" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="Location.CostCenter">Cell Center</label>
                    <input asp-for="Location.CostCenter" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="Location.CostCenter" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="Location.DivisionName">Division Name</label>
                    <input asp-for="Location.DivisionName" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="Location.DivisionName" class="text-danger"></span>
                </div>
            </div>
            <div>
                <h2 class="font-bold mb-2">Driver Details</h2>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="AssignedDriver.Id">Driver ID</label>
                    <input asp-for="AssignedDriver.Id" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="AssignedDriver.Id" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="AssignedDriver.Name">Driver Name</label>
                    <input asp-for="AssignedDriver.Name" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="AssignedDriver.Name" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="AssignedDriver.AssignedVehicleId">Current Driver Assigned On</label>
                    <input asp-for="AssignedDriver.AssignedVehicleId" class="w-full border border-gray-300 p-2" type="date">
                    <span asp-validation-for="AssignedDriver.AssignedVehicleId" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label class="block mb-1" asp-for="AssignedDriver.ContactNumber">Driver Phone</label>
                    <input asp-for="AssignedDriver.ContactNumber" class="w-full border border-gray-300 p-2">
                    <span asp-validation-for="AssignedDriver.ContactNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Create Vehicle</button>
        </div>
    </form>
</div>

