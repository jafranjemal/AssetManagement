@using AssetManagement.Web.Helpers
@inject ControllerHelper ControllerHelper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AssetManagement.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AssetManagement.Web.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- Sidebar -->
    <div class="d-flex" id="wrapper">
        <div class="bg-dark text-white p-4" id="sidebar" style="min-height: 100vh; width: 250px;">
            <!-- App name at the top of the sidebar -->
            <div class="mb-4 text-center">
                <h4>AssetManagement</h4>
                <p class="small">Manage your assets</p>
            </div>

            <!-- Controller list -->
            <ul class="nav flex-column">
                @foreach (var controller in ControllerHelper.GetControllers())
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", controller)">
                            @controller
                        </a>
                    </li>
                }
            </ul>
        </div>

        <!-- Content Area -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <div class="container-fluid p-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AssetManagement.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
